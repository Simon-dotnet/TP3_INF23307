@{
    var type = TempData["ErrorType"]?.ToString()?.Trim().ToLower();
    var errorType = (type == "error" ? "danger" : (type == "success" ? "success" : null));
    var errorText = TempData["ErrorMessage"] as string;
}

<link rel="stylesheet" href="~/css/colors.css"/>
<link rel="stylesheet" href="~/css/site.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0;">
<nav class="navbar navbar-dark d-flex align-items-center justify-content-between p-0"
     style="background-color: var(--footer-color); height: 85px">

    <div class="d-flex align-items-center" style="height: 100%;">
        <span class="navbar-brand m-0 p-0" style="height: 100%; display: flex; align-items: center;">
            <img src="~/nordiklogo.png" style="height: 100%; object-fit: contain; display: block; margin-right: 10px;">
        </span>

        <ul class="navbar-nav flex-row m-0 p-0" style="height: 100%; align-items: center;">
            <li class="nav-item">
                <a class="nav-link fs-5 fw-bold"
                   onclick="location.href='@Url.Action("Index", "Client")'"
                   style="color: var(--text-white); margin-left: 20px; transition: color 0.3s ease; cursor: pointer;"
                   onmouseover="this.style.color='var(--text-white-hover)'"
                   onmouseout="this.style.color='var(--text-white)'">
                    Module Client Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link fs-5 fw-bold"
                   href="@Url.Action("MakeSale", "Sale")"
                   style="color: var(--text-white); margin-left: 40px; transition: color 0.3s ease; cursor: pointer;"
                   onmouseover="this.style.color='var(--text-white-hover)'"
                   onmouseout="this.style.color='var(--text-white)'">
                    Enregistrer une vente client
                </a>
            </li>
        </ul>
    </div>

    <ul class="navbar-nav flex-row m-0 p-0" style="height: 100%; align-items: center;">
        <li class="nav-item me-4">
            <a class="nav-link fs-5 fw-bold"
               onclick="location.href='@Url.Action("Logout", "Home")'"
               style="color: var(--text-white); transition: color 0.3s ease; cursor: pointer;"
               onmouseover="this.style.color='var(--text-white-hover)'"
               onmouseout="this.style.color='var(--text-white)'">
                DÃ©connexion
            </a>
        </li>
    </ul>
</nav>


<main class="p-3" style="flex: 1; background-color: var(--text-white)">
    @if (!string.IsNullOrEmpty(errorText))
    {
        <div style="z-index: 100; position: relative" class="alert alert-@errorType alert-dismissible fade show" role="alert">
            <p style="text-align: center" class="m-0">@errorText</p>
        </div>
    }

    @RenderBody()
</main>

<footer class="text-center py-3" style="background-color: var(--footer-color);">
    <div class="container d-flex justify-content-center align-items-center gap-3">
        <p class="mb-0" style="color: var(--text-white);">Nordik Aventure 2025</p>
        <a style="color: var(--text-white); text-decoration: underline; cursor: pointer;"
           onclick="location.href='@Url.Action("Index", "Home")'">
            Retour aux modules
        </a>
    </div>
</footer>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>