@model List<Nordik_Aventure.Objects.Models.Finance.Sale>

@{
    Layout = "_ClientLayout";
}

<div class="container-fluid">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h3 class="h3 mb-0 ms-2">Historique de vente du client @ViewBag.ClientName</h3>
        </div>
    </div>
    <hr/>
    @if (Model.Count != 0)
    {
        <div class="row mb-4 cards-container py-4 px-2">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col" class="text-start ms-3">Date</th>
                    <th scope="col" class="text-center">Prix Total</th>
                    <th scope="col" class="text-center">Consulter Facture (+)</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td class="text-start ms-3">@s.DateOfSale.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-center">@s.TotalPrice.ToString("F2") $</td>

                        <td class="text-center" onclick="GetSaleModal(@s.Id)">
                            <i class="fa-solid fa-plus" style="cursor:pointer;"
                               data-bs-toggle="modal"
                               data-bs-target="#transactionModal">
                            </i>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2 class="h2">Il n'y a pas encore de commande de faites!</h2>
    }
</div>

<div class="modal fade" id="transactionModal" tabindex="-1" aria-labelledby="transactionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transactionModalLabel">Détails de la transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Quantité</th>
                        <th>Prix Unitaire</th>
                        <th>Prix Total</th>
                    </tr>
                    </thead>
                    <tbody id="transactionModalBody">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <span id="transactionTotal" class="fw-bold"></span>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    function clearModal() {
        document.getElementById("transactionModalBody").innerHTML = "";
        document.getElementById("transactionTotal").textContent = "";
    }

    function GetSaleModal(id) {
        clearModal();

        axios.get(`/finance/sale/details/${id}`)
            .then(r => {
                const data = r.data;
                if (!data || data.length === 0) {
                    alert("Aucun détail trouvé.");
                    return;
                }

                const tbody = document.getElementById("transactionModalBody");
                let total = 0;

                data.forEach(item => {
                    const lineTotal = item.totalPrice ?? 0;
                    total += lineTotal;

                    tbody.innerHTML += `
                    <tr>
                        <td>${item.nameProduct ?? "-"}</td>
                        <td>${item.quantity ?? "-"}</td>
                        <td>${item.unitPrice.toFixed(2)} $</td>
                        <td>${lineTotal.toFixed(2)} $</td>
                    </tr>`;
                });

                document.getElementById("transactionTotal").textContent =
                    "Total : " + total.toFixed(2) + " $";
            })
            .catch(err => console.error(err));
    }
</script>