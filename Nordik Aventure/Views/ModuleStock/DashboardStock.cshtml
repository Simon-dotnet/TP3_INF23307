@model GestBibli.Objects.ViewModels.StockDashboard
@{
    Layout = "_StockLayout";
    var isPositive = (Model.ProfitOfTheWeek > 0 ? "success" : "danger");
}

<div class="container-fluid" style="height: 100vh;">
    <div class="row h-100">

        <div class="col-8 d-flex flex-column border-end">
            <h1 class="h1">Tableau de bord du stock</h1>
            <div class="p-3 bg-light">
                <h3 class="h3">Profit de la semaine:<span class="ms-2 text-@isPositive">@Model.ProfitOfTheWeek.ToString("F2") $</span></h3>
            </div>
            <div class="flex-fill p-3 bg-light">
                <h3 class="h3">Liste des ventes de la semaine:</h3>
                <div class="flex-fill p-3 bg-light text-white d-flex flex-column rounded">
                    @if (Model.SalesOfTheWeek.Count == 0)
                    {
                        <h4 class="h4 text-dark">Aucune vente cette semaine!</h4>
                    }
                    else
                    {
                        <div class="table-responsive flex-fill" style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Produit</th>
                                    <th>Coût total</th>
                                </tr>
                                </thead>
                                <tbody id="recommendedProductsTableBody">
                                @foreach (var p in Model.SalesOfTheWeek)
                                {
                                    var productList = string.Join("\\n", 
                                        p.SaleDetails.Select(sd => $"{sd.ProductInStock.Product.Name} - {sd.Quantity}")
                                    );
                                    <tr>
                                        <td>@p.DateOfSale.ToString("yy-MM-dd")</td>
                                        <td>
                                            <button
                                                class="btn btn-outline-dark btn-sm"
                                                onclick="showProducts('@productList.Replace("'", "\\'")')">
                                                +
                                            </button>
                                        </td>
                                        <td>@p.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
            </div>
        </div>

        <div class="col-4 d-flex flex-column h-100">
            <h3 class="p-3 h3">Liste des produits à recommander</h3>
            <div class="flex-fill p-3 bg-light text-white d-flex flex-column rounded">
                @if (Model.ProductInStockToRefill.Count == 0)
                {
                    <h4 class="h4 text-dark">Aucun produit à recommander!</h4>
                }
                else
                {
                    <div class="table-responsive flex-fill" style="overflow-y: auto;">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="">
                            <tr>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Seuil</th>
                            </tr>
                            </thead>
                            <tbody id="recommendedProductsTableBody">
                            @foreach (var p in Model.ProductInStockToRefill)
                            {
                                <tr>
                                    <td>@p.Product.Name</td>
                                    <td>@p.QuantityInStock</td>
                                    <td>@p.Threshold</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script>
    function showProducts(products) {
        alert(products);
    }
</script>
