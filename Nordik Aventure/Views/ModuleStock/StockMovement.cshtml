@using System.Web
@model List<Nordik_Aventure.Objects.Models.MovementHistory>
@{
    Layout = "_StockLayout";
}
<div class="container-fluid">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h3 class="h3 mb-0 ms-2">Historique de mouvements dans le stock</h3>
            <h5 class="h5 mb-0 ms-2 text-muted">30 derniers mouvements :</h5>
        </div>
    </div>
    <hr/>
    @if (Model.Count != 0)
    {
        <div class="row mb-4 cards-container py-4 px-2">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col" class="text-start ms-3">Date Transaction</th>
                    <th scope="col" class="text-center">Type</th>
                    <th scope="col" class="text-center">Employé Affilié</th>
                    <th scope="col" class="text-center">Prix Total</th>
                    <th scope="col" class="text-center">Motif</th>
                    <th scope="col" class="text-center">Produits</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var mh in Model)
                {
                    <tr>
                        <td class="text-start ms-3">@mh.Date.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-center">@((mh.Type == "purchase") ? "Entrée" : "Sortie")</td>
                        <td class="text-center">@mh.Employee.Name</td>
                        <td class="text-center">
                            @(
                            mh.Type == "purchase"
                                ? mh.Purchase.PurchaseDetails.Sum(pd => pd.Quantity * pd.Product.PriceToBuy).ToString("N2")
                                : mh.Sale.SaleDetails.Sum(sd => sd.Quantity * sd.ProductInStock.Product.PriceToSell).ToString("N2")
                            ) $
                        </td>
                        <td class="text-center">
                            <i style="cursor:pointer" onclick="AlertMsg('@Html.Raw(HttpUtility.JavaScriptStringEncode(mh.Motif))')" class="fa-solid fa-plus"></i>
                        </td>
                        @if (@mh.Type == "purchase")
                        {
                            <td class="text-center" onclick="GetPurchaseModal(@mh.PurchaseId)">
                                <i class="fa-solid fa-plus" style="cursor:pointer;"
                                   data-bs-toggle="modal"
                                   data-bs-target="#transactionModal">
                                </i>
                            </td>
                        }
                        else
                        {
                            <td class="text-center" onclick="GetSaleModal(@mh.SaleId)">
                                <i class="fa-solid fa-plus" style="cursor:pointer;"
                                   data-bs-toggle="modal"
                                   data-bs-target="#transactionModal">
                                </i>
                            </td>
                        }
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h2 class="h2">Il n'y a pas encore de commande de faites!</h2>
    }
</div>

<div class="modal fade" id="transactionModal" tabindex="-1" aria-labelledby="transactionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transactionModalLabel">Détails de la transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Quantité</th>
                        <th>Prix Total</th>
                        <th>Fournisseur / Client</th>
                    </tr>
                    </thead>
                    <tbody id="transactionModalBody">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <span id="transactionTotal" class="fw-bold"></span>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    function clearModal() {
        document.getElementById("transactionModalBody").innerHTML = "";
        document.getElementById("transactionTotal").textContent = "";
    }

    function GetPurchaseModal(id) {
        clearModal();

        axios.get(`/finance/purchase/${id}`)
            .then(r => {
                const data = r.data;
                if (!data || data.length === 0) {
                    alert("Aucun détail trouvé.");
                    return;
                }
                console.log("Raw JSON from server:", data);

                const tbody = document.getElementById("transactionModalBody");
                let total = 0;

                data.forEach(item => {
                    const lineTotal = item.totalPrice ?? 0;
                    total += lineTotal;

                    tbody.innerHTML += `
                    <tr>
                        <td>${item.nameProduct ?? "-"}</td>
                        <td>${item.sku ?? "-"}</td>
                        <td>${item.quantity ?? "-"}</td>
                        <td>${lineTotal.toFixed(2)} $</td>
                        <td>${item.supplierName ?? "-"}</td>
                    </tr>`;
                });

                document.getElementById("transactionTotal").textContent =
                    "Total : " + total.toFixed(2) + " $";
            })
            .catch(err => console.error(err));
    }

    function GetSaleModal(id) {
        clearModal();

        axios.get(`/finance/sale/${id}`)
            .then(r => {
                const data = r.data;
                if (!data || data.length === 0) {
                    alert("Aucun détail trouvé.");
                    return;
                }

                const tbody = document.getElementById("transactionModalBody");
                let total = 0;

                data.forEach(item => {
                    const lineTotal = item.totalPrice ?? 0;
                    total += lineTotal;

                    tbody.innerHTML += `
                    <tr>
                        <td>${item.nameProduct ?? "-"}</td>
                        <td>${item.sku ?? "-"}</td>
                        <td>${item.quantity ?? "-"}</td>
                        <td>${lineTotal.toFixed(2)} $</td>
                        <td>${item.clientName ?? "-"}</td>
                    </tr>`;
                });

                document.getElementById("transactionTotal").textContent =
                    "Total : " + total.toFixed(2) + " $";
            })
            .catch(err => console.error(err));
    }
    
    function AlertMsg(text){
        alert(text);
    }
</script>