@model Nordik_Aventure.Objects.Models.ProductInStock
@{
    Layout = "_StockLayout";
    var stockValue = Math.Round(Model.QuantityInStock * Model.Product.PriceToSell, 2);
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center mb-4">

        <div class="col-lg-7 col-md-6 mb-3 mb-md-0">
            <h3 class="fw-semibold mb-1">@Model.Product.Name</h3>
            <div class="d-flex flex-wrap gap-3 mt-2">
                <div class="d-flex align-items-center">
                    <span class="fw-bold me-2 text-secondary">Valeur en stock :</span>
                    <span style="background-color: var(--background-main)" class="badge fs-6">@stockValue.ToString("F2") $</span>
                </div>
            </div>
        </div>
    </div>
    
    <hr/>
    <div class="cards-container">
        <div class="mb-3">

            <label class="form-label fw-bold">Nom</label>
            <input type="text" class="form-control" value="@Model.Product.Name" readonly>

            <label class="form-label fw-bold mt-3">SKU</label>
            <input type="text" class="form-control" value="@Model.Product.Sku" readonly>

            <label class="form-label fw-bold mt-3">Prix de vente</label>
            <input type="text" class="form-control" value="@Model.Product.PriceToSell $" readonly>

            <label class="form-label fw-bold mt-3">Fournisseur</label>
            <input type="text" class="form-control" value="@Model.Product.Supplier.Name" readonly>

            <label class="form-label fw-bold mt-3">Quantité en stock</label>
            <input type="text" class="form-control" value="@Model.QuantityInStock" readonly>

            <label class="form-label fw-bold mt-3">Seuil de réapprovisionnement</label>
            <input type="text" class="form-control" value="@Model.Threshold" readonly>
            
            <label class="form-label fw-bold mt-3">Quantité minimale</label>
            <input type="text" class="form-control" value="@Model.MinimalQuantity" readonly>

            <label class="form-label fw-bold mt-3">Catégorie</label>
            <input type="text" class="form-control" value="@Model.Product.Category.Name" readonly>

            <label class="form-label fw-bold mt-3">Status</label>
            <input type="text" class="form-control" value="@Model.Status" readonly>

            <label class="form-label fw-bold mt-3">Emplacement</label>
            <input type="text" class="form-control" value="@Model.StorageLocation" readonly>

            <label class="form-label fw-bold mt-3">Dernier réapprovisionnement</label>
            <input type="text" class="form-control"
                   value="@Model.LastRefill.ToString("yyyy-MM-dd")"
                   readonly>
        </div>

    </div>
    <div class="text-center mt-3">
        <a href="@Url.Action("UpdateProductStockForm", "Stock", new { id = @Model.Id })" type="submit" style="background-color: var(--background-button); color: var(--text-white)" class="btn w-25">Modifier</a>
    </div>
</div>