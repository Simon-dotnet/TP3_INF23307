@model Nordik_Aventure.Objects.Models.User.Employee
<link rel="stylesheet" href="css/colors.css"/>
<link rel="stylesheet" href="css/site.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body class="d-flex flex-column justify-content-center align-items-center" style="background-color: var(--background-secondary);">
<div class="mb-3">
    <h1 class="text-center mt-4">Accès aux modules</h1>
</div>
<div class="card p-4 shadow" style="width: 90%; height: 85%; border-radius: 10px; background-color: var(--background-main);">

    <div class="mb-4">
        <h2>Bonjour @Model.Name @Model.Surname</h2>
        <p>Vous êtes @Model.Role</p>
    </div>
    <div class="container px-4">
        <div class="row text-center g-3">
            @switch (Model.Role)
            {
                case "Manager":
                    <div class="col">
                        <button onclick="location.href='@Url.Action("Index","Stock")'" class="big-button">Gestion des stocks et des produits</button>
                    </div>
                    <div class="col">
                        <button onclick="location.href='@Url.Action("Index","Finance")'" class="big-button">Gestion des finances et de la facturation</button>
                    </div>
                    <div class="col">
                        <button onclick="location.href='@Url.Action("Index","Client")'" class="big-button">Gestion de la relation client</button>
                    </div>
                    break;
                case "Accountant":
                    <div class="col">
                        <button class="big-button no-access">Gestion des stocks et des produits</button>
                    </div>
                    <div class="col">
                        <button onclick="location.href='@Url.Action("Index","Finance")'" class="big-button">Gestion des finances et de la facturation</button>
                    </div>
                    <div class="col">
                        <button class="big-button no-access">Gestion de la relation client</button>
                    </div>
                    break;
                case "Employee":
                    <div class="col">
                        <button onclick="location.href='@Url.Action("Index","Stock")'" class="big-button">Gestion des stocks et des produits</button>
                    </div>
                    <div class="col">
                        <button class="big-button no-access">Gestion des finances et de la facturation</button>
                    </div>
                    <div class="col">
                        <button class="big-button no-access">Gestion de la relation client</button>
                    </div>
                    break;
            }

        </div>
        <div class="row text-center mt-5">
            <a asp-action="Logout" style="color: var(--text-black)" class="link">Déconnexion</a>
        </div>
    </div>
</div>
</body>