@{
    var errorType = (TempData["ErrorType"] == "error" ? "danger" : "success");
    var errorText = @TempData["ErrorMessage"] as string;
}

<link rel="stylesheet" href="css/colors.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body class="d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: var(--background-main);">
<div class="card p-4" style="width: 100%; max-width: 600px; border-radius: 10px; background-color: var(--background-secondary)">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(errorText))
        {
            <div class="alert alert-@errorType alert-dismissible fade show" role="alert">
                <p style="text-align: center" class="m-0">@errorText</p>
            </div>
        }
        <h1 class="card-title text-center mb-3" style="color: var(--text-white)">Connexion</h1>
        <p class="text-center mb-4" style="color: var(--text-white)">Veuillez vous connecter</p>

        <form method="post" asp-controller="Home" asp-action="CheckLogin">
            <div class="mb-3">
                <label style="color: var(--text-white)" for="email" class="form-label fs-4">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Entrez votre email" required>
            </div>
            <div class="mb-3">
                <label style="color: var(--text-white)" for="password" class="form-label fs-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Entrez votre mot de passe" required>
            </div>
            <button type="submit" style="background-color: var(--background-button); color: var(--text-white)" class="btn w-100">Se connecter</button>
        </form>
    </div>
</div>

</body>